@using Heavy.Web.ViewModels
@model EditRoleViewModel

@{
    ViewBag.Title = "修改角色";
}

<h2>@ViewBag.Title</h2>

<form method="post">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Id" readonly />
            <span class="invalid" asp-validation-for="Id"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="RoleName" />
            <span class="invalid" asp-validation-for="RoleName"></span>
        </div>
    </div>

    <div class="invalid" asp-validation-summary="ModelOnly"></div>

    <button type="submit" class="btn btn-primary">提交</button>
    <a asp-action="Index" class="btn btn-secondary">返回列表</a>
</form>

<h3>角色所属用户</h3>
<ul>
    @foreach (var u in @Model.Users)
    {
        <li>@u</li>
    }
</ul>
<a asp-action="AddUserToRole" class="btn btn-secondary" asp-route-roleId="@Model.Id">添加用户到角色</a>
<a asp-action="RemoveUserFromRole" class="btn btn-secondary" asp-route-roleId="@Model.Id">从角色中删除用户</a>